@model Book
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description">
                Basic form elements
            </p>
            <form class="forms-sample" asp-action="create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AuthorId">Author</label>
                    <select asp-for="AuthorId" class="form-control" asp-items="@(new SelectList(ViewBag.Authors,nameof(Author.Id),nameof(Author.Name)))" ></select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GenreId">Genre</label>
                    <select asp-for="GenreId" class="form-control" asp-items="@(new SelectList(ViewBag.Genres,nameof(Genre.Id),nameof(Genre.Name)))"></select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsAvailable"></label>
                    <input asp-for="IsAvailable" class="form-control" >
                    <span asp-validation-for="IsAvailable" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DisCountPrice"></label>
                    <input asp-for="DisCountPrice" class="form-control" >
                    <span asp-validation-for="DisCountPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" >
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MainFile"></label>
                    <input asp-for="MainFile" class="form-control" >
                    <span asp-validation-for="MainFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Files"></label>
                    <input asp-for="Files" class="form-control">
                    <span asp-validation-for="Files" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light"><a asp-action="index">Cancel</a></button>
            </form>

        </div>
    </div>
</div>
