@{
    ViewData["Title"] = "Create";
}

@model Book
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Book</h4>

            <form class="forms-sample" asp-action="Create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" placeholder="Price">
                    <span asp-validation-for="Price"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DisCountPrice"></label>
                    <input asp-for="DisCountPrice" class="form-control" placeholder="Discount Price">
                    <span asp-validation-for="DisCountPrice"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" placeholder="Descripiton">
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PageCount"></label>
                    <input asp-for="PageCount" class="form-control" placeholder="Page Count">
                    <span asp-validation-for="PageCount"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsAvailable"></label>
                    <input asp-for="IsAvailable" class="form-control">
                    <span asp-validation-for="IsAvailable"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MainFile"></label>
                    <input asp-for="MainFile" class="form-control" placeholder="File">
                    <span asp-validation-for="MainFile"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AuthorId">Author</label>
                    <select asp-for="AuthorId" asp-items="@new SelectList(ViewBag.Authors,nameof(Author.Id),nameof(Author.Name))"></select>
                    <span asp-validation-for="AuthorId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GenreId">Genre</label>
                    <select asp-for="GenreId" asp-items="@new SelectList(ViewBag.Genres,nameof(Genre.Id),nameof(Genre.Name))"></select>
                    <span asp-validation-for="GenreId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Files"></label>
                    <input asp-for="Files" class="form-control" placeholder="Files">
                    <span asp-validation-for="Files"></span>
                </div>
                <div asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light"> <a asp-action="Index"></a>Cancel</button>
            </form>
        </div>
    </div>
</div>



