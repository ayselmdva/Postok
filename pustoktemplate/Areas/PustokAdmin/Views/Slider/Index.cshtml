@{
    int count = 1;
}
@model IEnumerable<Slider>

<div class="d-flex justify-content-end mr-2 mb-3">
    <a class="btn btn-success" asp-action="Create">Create Category</a>
</div>

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Table with contextual classes</h4>
            <p class="card-description">
                Add class <code>.table-{color}</code>
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Title1
                            </th>
                            <th>
                               Title2
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model){
                        <tr class="table-info">
                            <td>
                                @(count++)
                            </td>
                            <td>
                                @item.Title1
                            </td>
                            <td>
                                @item.Title2
                            </td>
                            <td>
                                @item.Description
                            </td>
                            <td>
                                @item.Image
                            </td>
                            <td>
                                 <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                        <i class="mdi mdi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm delete-item-book">
                                        <i class="mdi mdi-delete-variant"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="mdi mdi-border-color"></i>
                                        </a>
                            </td>
                        </tr>
                      }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>